---
const currentYear = new Date().getFullYear();

const socialLinks = [
  { href: 'https://linkedin.com/in/ianpcook', label: 'LinkedIn', icon: 'linkedin' },
  { href: 'https://twitter.com/ianpcook', label: 'Twitter', icon: 'twitter' },
  { href: 'https://github.com/ianpcook', label: 'GitHub', icon: 'github' },
];
---

<footer class="border-t border-parchment bg-cream-dark relative overflow-hidden">
  <!-- Subtle road stripe accent -->
  <div class="absolute right-8 top-0 bottom-0 w-0.5 bg-gradient-to-b from-parchment via-sienna/20 to-parchment"></div>

  <div class="container-wide py-12 relative">
    <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-6">
      <div>
        <p class="font-display text-lg font-bold text-ink mb-2">
          Fierce Highways
        </p>
        <p class="text-sm text-stone">
          &copy; {currentYear} Ian Cook, PhD
        </p>
        <p class="text-xs text-stone mt-2 group">
          Built with
          <a href="https://astro.build" target="_blank" rel="noopener noreferrer" class="text-stone hover:text-sienna transition-colors link-underline">Astro</a>
          <span class="inline-block transition-transform group-hover:translate-x-1">â†’</span>
        </p>
      </div>

      <div class="flex gap-8">
        {socialLinks.map(({ href, label }) => (
          <a
            href={href}
            target="_blank"
            rel="noopener noreferrer"
            class="text-stone hover:text-sienna transition-colors no-underline link-underline text-sm font-medium"
            aria-label={label}
          >
            {label}
          </a>
        ))}
      </div>
    </div>
  </div>
</footer>
