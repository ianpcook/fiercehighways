---
interface Props {
  title: string;
  tagline: string;
  description: string;
  ctaText?: string;
  ctaHref?: string;
}

const {
  title,
  tagline,
  description,
  ctaText = "Let's talk",
  ctaHref = '/contact',
} = Astro.props;
---

<section class="section-spacing">
  <div class="container-editorial">
    <p class="label text-sienna mb-4">{tagline}</p>
    <h1 class="type-display mb-6 max-w-4xl">
      {title}
    </h1>
    <p class="type-lead max-w-2xl mb-8">
      {description}
    </p>
    <a
      href={ctaHref}
      class="inline-block px-6 py-3 bg-sienna text-cream font-medium text-sm tracking-wide uppercase no-underline hover:bg-sienna-dark transition-colors"
    >
      {ctaText}
    </a>
  </div>
</section>
