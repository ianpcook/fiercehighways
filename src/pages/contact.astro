---
import BaseLayout from '../layouts/BaseLayout.astro';

const email = 'hello@fiercehighways.ai';
const socialLinks = [
  { name: 'LinkedIn', url: 'https://www.linkedin.com/in/ianpcook' },
  { name: 'Twitter', url: 'https://twitter.com/ianpcook' },
  { name: 'GitHub', url: 'https://github.com/ianpcook' },
];
---

<BaseLayout
  title="Contact | Fierce Highways"
  description="Get in touch about AI consulting, prototyping, and production implementation projects."
>
  <!-- Hero with Highway Image -->
  <section class="relative min-h-[40vh] flex items-center overflow-hidden">
    <div class="absolute inset-0">
      <img
        src="https://images.unsplash.com/photo-1551732998-9573f695fdbb?w=1920&q=80"
        alt="Highway through landscape"
        class="w-full h-full object-cover"
        loading="eager"
      />
      <div class="absolute inset-0 bg-ink/70"></div>
    </div>

    <div class="relative container-editorial py-16">
      <p class="label text-sienna mb-4">Contact</p>
      <h1 class="text-4xl md:text-5xl font-display font-bold text-cream mb-4">
        What's the problem?
      </h1>
      <p class="text-lg text-cream/80 max-w-xl">
        Skip the intake form. Just tell me what you're trying to build and what's in the way.
      </p>
    </div>
  </section>

  <section class="section-spacing">
    <div class="container-editorial">
      <div class="grid md:grid-cols-2 gap-12">
        <div>
          <h2 class="text-2xl font-display font-bold mb-6">Get in Touch</h2>
          <p class="text-ink-light mb-8 leading-relaxed">
            Email is the fastest way to reach us. We typically respond within 24-48 hours.
          </p>
          <a
            href={`mailto:${email}`}
            class="inline-block px-8 py-4 bg-sienna text-cream font-medium tracking-wide uppercase no-underline hover:bg-sienna-dark transition-colors"
          >
            {email}
          </a>
        </div>

        <div>
          <h2 class="text-2xl font-display font-bold mb-6">How We Work</h2>
          <ul class="space-y-4 text-ink-light">
            <li class="flex gap-3">
              <span class="text-sienna font-bold">01</span>
              <span>Build working prototypes fast—days, not months</span>
            </li>
            <li class="flex gap-3">
              <span class="text-sienna font-bold">02</span>
              <span>Ship proven code to production</span>
            </li>
            <li class="flex gap-3">
              <span class="text-sienna font-bold">03</span>
              <span>Solve the immediate problem, not the theoretical one</span>
            </li>
            <li class="flex gap-3">
              <span class="text-sienna font-bold">04</span>
              <span>No decks, no roadmaps—just the next right move</span>
            </li>
          </ul>
        </div>
      </div>

      <div class="mt-16 pt-12 border-t border-parchment">
        <h2 class="text-xl font-display font-bold mb-6">Connect</h2>
        <div class="flex flex-wrap gap-4">
          {socialLinks.map(({ name, url }) => (
            <a
              href={url}
              target="_blank"
              rel="noopener noreferrer"
              class="px-5 py-3 border border-parchment text-ink hover:border-sienna hover:text-sienna transition-colors no-underline text-sm font-medium"
            >
              {name}
            </a>
          ))}
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
